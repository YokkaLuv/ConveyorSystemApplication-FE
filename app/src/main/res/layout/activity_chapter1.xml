<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAE1FF">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chapter I"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calculateBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_button"
        android:orientation="vertical">

        <!-- Lực vòng trên xích tải -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Lực vòng trên xích tải, F(N)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/FValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:lineSpacingExtra="0sp"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Vận tốc xích tải -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Vận tốc xích tải, v (m/s)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/vValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Số răng đĩa xích tải dẫn -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Số răng đĩa xích tải dẫn, z (răng)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/zValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="Enter value"
                android:inputType="number"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bước xích tải -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Bước xích tải, p (mm)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Thời gian phục vụ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Thời gian phục vụ L (năm)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/LValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="Enter value"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- Chế độ tai -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Chế độ tải"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/t1Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="t1(s)"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/t2Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="t2(s)"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/T1Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="T1=...T"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/T2Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="T2=...T"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons (kept unchanged as per your request) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/calculateBox"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/calculate"
            android:layout_width="245dp"
            android:layout_height="45dp"
            android:background="@drawable/button_black_rounded"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Keep other buttons as is -->
    </LinearLayout>
</RelativeLayout>
