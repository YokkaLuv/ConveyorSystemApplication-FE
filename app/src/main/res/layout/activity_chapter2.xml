<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/backing"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/header_title"
            android:paddingStart="0dp"
            android:paddingEnd="40dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chapter II"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calculateBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_button"
        android:orientation="vertical">

        <!-- Công suất trên trục công tác -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Công suất trên trục công tác (kW)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/PValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:hint="Nhập giá trị"
                android:inputType="numberDecimal"
                android:lineSpacingExtra="0sp"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Vận tốc xích tải -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Vận tốc xích tải (m/s)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/vValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="Nhập giá trị"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Số răng đĩa xích nhỏ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Số răng đĩa xích nhỏ (z1)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/z1Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="Nhập giá trị"
                android:inputType="number"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bước xích tải -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Bước xích tải, p (mm)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="Nhập giá trị"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Số răng đĩa xích lớn (z2)-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Số răng đĩa xích lớn (z2)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/grey_container"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/z2Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="Nhập giá trị"
                android:inputType="numberDecimal"
                android:textColor="#449D00"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- const button set-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp">

            <include
                android:id="@+id/chap2_button_set"
                layout="@layout/const_button_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- const button set-->
    </LinearLayout>

    <!-- Buttons (kept unchanged as per your request) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/calculateBox"
        android:gravity="center"

        >

        <LinearLayout
            android:id="@+id/calculate"
            android:layout_width="245dp"
            android:layout_height="45dp"
            android:background="@drawable/button_black_rounded"
            android:gravity="center"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"

                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
