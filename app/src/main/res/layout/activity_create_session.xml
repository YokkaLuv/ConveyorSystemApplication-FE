<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAE1FF">

    <!-- Thanh màu xanh phía trên -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
      >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"

            android:layout_centerInParent="true"
            android:contentDescription="Logo" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Logo" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Logo" />
    </RelativeLayout>

    <!-- Nội dung giữa màn hình -->
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/bottom_bar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            nút số 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_button"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Chữ bên trái -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="   Transmission Caculator"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000" />



            </LinearLayout>

<!--            nút số 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_button"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Chữ bên trái -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="   Pulley\nCaculator"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <!-- Icon bên phải -->
                <ImageView
                    android:layout_width="164dp"
                    android:layout_height="109dp"
                    android:src="@drawable/pulley_caculator" />
            </LinearLayout>
<!--nút số 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_button"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Chữ bên trái -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="  Spring\nCaculator"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#000" />

                <!-- Icon bên phải -->
                <ImageView
                    android:layout_width="111dp"
                    android:layout_height="154dp"
                    android:src="@drawable/spring_caculator" />
            </LinearLayout>
<!--nút số 4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_button"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Chữ bên trái -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Belt Length\n Caculator"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#000" />

                <!-- Icon bên phải -->
                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="110dp"
                    android:src="@drawable/belt_length_caculator" />
            </LinearLayout>
<!--nút số 5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_button"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Chữ bên trái -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="     Engine\nDisplacement\n   Caculator"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <!-- Icon bên phải -->
                <ImageView
                    android:layout_width="143dp"
                    android:layout_height="54dp"
                    android:src="@drawable/engine_displacement_caculator" />
            </LinearLayout>





        </LinearLayout>
    </ScrollView>

    <!-- Thanh màu xanh phía dưới -->
    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_home"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user"
            android:contentDescription="User" />
    </RelativeLayout>
</RelativeLayout>
