<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background ="@color/main_color"
    >

<!--header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:id = "@+id/header"
        >
<!--nút quay về-->

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:contentDescription="Quay lại"
            android:background="@null"
        />
<!--gear...-->
       <TextView
           android:id ="@+id/Gear"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="GearBox Caculation"
           android:gravity="center"
           android:textStyle ="bold"
           android:textSize = "22sp"
          android:layout_weight = "1"
           />
<!--        nút setting-->
        <ImageView
            android:src = "@drawable/more"
            android:layout_width ="wrap_content"
            android:layout_height = "wrap_content"
            />
    </LinearLayout>

<!--   phần biểu diễn thông tin -->
<LinearLayout
    android:orientation ="vertical"
    android:layout_height ="match_parent"
    android:layout_width ="match_parent"
    android:layout_below="@id/header"
    android:layout_marginLeft = "15dp"
    android:layout_marginRight = "15dp"
    >

<!--    2 cái button chọn tab-->
    <LinearLayout
        android:layout_height = "wrap_content"
        android:layout_width = "match_parent"
        android:orientation ="horizontal"
        >

<!--       tab result -->
        <LinearLayout
            android:id="@+id/custombutton"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/tab_change_button"
            android:clickable="true"
            android:focusable="true">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result"
                android:gravity ="center"
                android:textColor="#000000"
                android:textSize ="20sp"
                android:textStyle ="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>
<!--        khoảng trắng ở giữa-->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent" />

<!--        tab caculation detail-->
        <LinearLayout
            android:id="@+id/customButton"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/tab_change_button"
            android:clickable="true"
            android:focusable="true">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Caculation Detail"
                android:gravity ="center"
                android:textColor="#000000"
                android:textSize ="20sp"
                android:textStyle ="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>


    </LinearLayout>

<!--    scrollview hiển thị thông tin-->
<ScrollView
    android:layout_width = "match_parent"
    android:layout_height = "0dp"
    android:layout_weight ="1"
    android:background ="@drawable/edittext_rounded"
    android:layout_marginBottom="15dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


     <!-- chữ output torque-->
        <TextView
            android:layout_height = "wrap_content"
            android:layout_width ="match_parent"
            android:text ="Output Torque"
            android:textSize ="25sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            android:textStyle = "bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:background ="@drawable/grey_container"
            android:orientation = "horizontal" >

        <TextView
                  android:layout_height ="wrap_content"
                  android:layout_width ="60dp"
                  android:text ="1900"
                  android:layout_weight="1"
                  android:textStyle ="bold"
                  android:textSize = "25sp"
                  android:layout_marginLeft="5dp"
                  android:textColor ="#449D00"

            />

            <TextView
                android:layout_height = "wrap_content"
                android:layout_width = "wrap_content"
                android:text = "N/m"
                android:textStyle = "bold"
                android:textSize ="25sp" />
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="30dp"
                android:src="@drawable/stat_minus"
                />
        </LinearLayout>

<!--nút view 3d model-->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation ="vertical"
            android:layout_marginTop="12dp"
            android:background ="@drawable/green_button"
            android:layout_gravity="center_horizontal"
            android:padding ="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text ="View 3D Model"
                android:textSize = "18sp"
                android:textColor ="#FFFFFF"


                />
            <ImageView
                android:layout_width ="20dp"
                android:layout_height ="20dp"
                android:src = "@drawable/arrow_down"
                android:layout_gravity="center_horizontal"

                />
        </LinearLayout>

<!--    nút suggetion-->

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation ="vertical"
            android:layout_marginTop="12dp"
            android:background ="@drawable/grey_button"
            android:layout_gravity="center_horizontal"
            android:padding ="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text ="View suggested products"
                android:textSize = "18sp"
                android:textStyle ="bold"
                android:textColor ="#000000"


                />
            <ImageView
                android:layout_width ="20dp"
                android:layout_height ="20dp"
                android:src = "@drawable/black_arrow_up"
                android:layout_gravity="center_horizontal"

                />
        </LinearLayout>

<!--       dòng chữ dưới. 2 cái nút -->
        <TextView
            android:layout_height = "wrap_content"
            android:layout_width = "wrap_content"
            android:layout_marginTop="10dp"
            android:text ="Base on your input requirments and output results, here are some gearbox suggestion:"
            android:textSize = "22sp"
            android:textStyle ="bold"

            />
<!--    first choice    -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation ="vertical"
            >
                <!--title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text ="1.AB- High Prec Planetary Gearboxes"
                android:layout_marginTop="10dp"
                android:textStyle = "bold"
                android:textSize = "25sp"
                />

            <ImageView
                android:layout_height="164dp"
                android:layout_width ="215dp"
                android:src = "@drawable/susgested_motor_1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text ="Powerful, precise, robust, quiet and fast, suitable for all servo applications.The Apex AB series is the Next generation in planetary technology. Highest Precision, Highest Torque and Quiet Operation are provided by 100% optimized Helical Gearing. Straddle Mounted High Precision Bearings Allow for High Radial and Axial Loads."
                android:textStyle ="bold"
                />

        <!--  hai cái nút  -->
            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:orientation ="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation ="vertical"
                    android:layout_marginTop="12dp"
                    android:background ="@drawable/green_button"
                    android:layout_gravity="center_horizontal"
                    android:padding ="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text ="Detail specfication"
                        android:padding ="4dp"
                        android:textSize = "12sp"
                        android:textColor ="#FFFFFF"


                        />

                </LinearLayout>
                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation ="vertical"
                    android:layout_marginTop="12dp"
                    android:background ="@drawable/green_button"
                    android:layout_gravity="center_horizontal"
                    android:padding ="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text ="Contact Manufacturer"
                        android:textSize = "12sp"
                        android:padding = "4dp"
                        android:textColor ="#FFFFFF"


                        />

                </LinearLayout>
            </LinearLayout>







        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation ="vertical"
            >
            <!--title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text ="2.AB- High Prec Planetary Gearboxes"
                android:layout_marginTop="10dp"
                android:textStyle = "bold"
                android:textSize = "25sp"
                />

            <ImageView
                android:layout_height="164dp"
                android:layout_width ="215dp"
                android:src = "@drawable/susgested_motor_1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text ="Powerful, precise, robust, quiet and fast, suitable for all servo applications.The Apex AB series is the Next generation in planetary technology. Highest Precision, Highest Torque and Quiet Operation are provided by 100% optimized Helical Gearing. Straddle Mounted High Precision Bearings Allow for High Radial and Axial Loads."
                android:textStyle ="bold"
                />

            <!--  hai cái nút  -->
            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:orientation ="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation ="vertical"
                    android:layout_marginTop="12dp"
                    android:background ="@drawable/green_button"
                    android:layout_gravity="center_horizontal"
                    android:padding ="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text ="Detail specfication"
                        android:padding ="4dp"
                        android:textSize = "12sp"
                        android:textColor ="#FFFFFF"


                        />

                </LinearLayout>
                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation ="vertical"
                    android:layout_marginTop="12dp"
                    android:background ="@drawable/green_button"
                    android:layout_gravity="center_horizontal"
                    android:padding ="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text ="Contact Manufacturer"
                        android:textSize = "12sp"
                        android:padding = "4dp"
                        android:textColor ="#FFFFFF"


                        />

                </LinearLayout>
            </LinearLayout>







        </LinearLayout>





        <!--        tới đây là kết thúc của cái box ngoài-->


    </LinearLayout>
</ScrollView>



</LinearLayout>
</RelativeLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Gearbox Calculator"
                android:textColor="#050505"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/more" />
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_selected"
                android:gravity="center"
                android:padding="12dp"
                android:text="RESULT"
                android:textColor="#050505"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_unselected"
                android:gravity="center"
                android:padding="12dp"
                android:text="Calculation details"
                android:textColor="#100000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Container for white background card -->
        <LinearLayout
            android:id="@+id/white_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_white_rounded"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Output Torque -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="start"
                android:text="Output torque result:"
                android:textColor="#090909"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_card"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1900"
                    android:textColor="#00AA00"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text=" N/m"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- View 3D Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:backgroundTint="#00C853"
                android:text="View 3D Model"
                android:textColor="@android:color/white" />

            <!-- 3D Image Area chiếm full box -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/round_outline"
                android:backgroundTint="@color/white"
                android:clipToOutline="true"
                android:elevation="4dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/fake_photo" />

            <!-- Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#00C853"
                android:text="View suggested products"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
